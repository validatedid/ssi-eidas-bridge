{
  "name": "ssi-eidas-bridge",
  "private": true,
  "version": "1.0.0",
  "description": "SSI eIDAS Bridge",
  "author": "",
  "license": "EUPL-1.2",
  "repository": {
    "type": "github",
    "url": "https://github.com/validatedid/ssi-eidas-bridge.git"
  },
  "scripts": {
    "audit": "audit-ci --moderate",
    "start": "node dist/start.js",
    "start:dev": "nodemon --watch src --watch api -e ts,yaml --exec 'ts-node' src/start.ts",
    "start:openapi": "openapi preview-docs api/openapi.yaml",
    "build": "yarn clean && tsc -p tsconfig-build.json",
    "clean": "rm -rf ./dist ./coverage ./log ./build",
    "compile": "tsc",
    "compile:dev": "tsc -w",
    "coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.{js,ts}' 'tests/**/*.{js,ts}' --quiet",
    "lint:openapi": "openapi lint api/openapi.yaml",
    "lint-staged": "lint-staged",
    "full-lint": "tsc --noEmit && eslint 'src/**/*.{js,ts}' --quiet --fix && prettier --write 'src/**/*.{js,ts}'",
    "format": "prettier --write 'src/**/*.{js,ts}' 'tests/**/*.{js,ts}'",
    "test": "jest --runInBand --verbose false --testPathIgnorePatterns=deployed",
    "test:unit": "jest --clearCache && jest --runInBand --verbose false --testPathPattern=unit",
    "test:e2e": "jest --clearCache && jest --runInBand --verbose false --testPathPattern=e2e",
    "clearCache": "jest --clearCache",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@ceramicnetwork/key-did-resolver": "^0.2.2",
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@redocly/openapi-cli": "^1.0.0-beta.29",
    "@tsconfig/node14": "^1.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.9",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/ioredis": "^4.22.0",
    "@types/jest": "^26.0.20",
    "@types/jsonld": "^1.5.2",
    "@types/node": "^14.14.31",
    "@types/node-forge": "^0.9.6",
    "@types/supertest": "^2.0.9",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "@types/yamljs": "^0.2.30",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "audit-ci": "^3.0.1",
    "dids": "^1.1.1",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.1",
    "jest": "^26.2.2",
    "jest-junit": "^12.0.0",
    "key-did-provider-ed25519": "^1.0.0",
    "lint-staged": "^10.5.4",
    "node-mocks-http": "^1.10.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.0.4",
    "standard-version": "^9.1.0",
    "supertest": "^6.1.1",
    "ts-jest": "^26.5.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.2.2",
    "uuid": "^8.3.2"
  },
  "dependencies": {
    "@cef-ebsi/express-problem-details": "^0.0.2",
    "@cef-ebsi/problem-details-errors": "^0.0.3",
    "axios": "^0.21.1",
    "base64url": "^3.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "did-jwt": "^4.8.1",
    "did-resolver": "^2.1.2",
    "dotenv": "^8.2.0",
    "eciesjs": "^0.3.9",
    "ethers": "^5.0.26",
    "express": "^4.17.1",
    "ioredis": "^4.19.4",
    "jose": "^3.5.3",
    "jsonld": "^4.0.1",
    "jsrsasign": "^10.1.11",
    "logform": "^2.2.0",
    "node-forge": "^0.10.0",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.2.1",
    "yamljs": "^0.3.0"
  }
}
