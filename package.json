{
  "name": "ssi-eidas-bridge",
  "private": true,
  "version": "1.0.0",
  "description": "SSI eIDAS Bridge",
  "author": "",
  "license": "EUPL-1.2",
  "repository": {
    "type": "github",
    "url": "https://github.com/validatedid/ssi-eidas-bridge.git"
  },
  "scripts": {
    "audit": "audit-ci --moderate",
    "start": "node dist/start.js",
    "start:dev": "nodemon --watch src --exec 'ts-node' src/start.ts",
    "start:openapi": "openapi preview-docs api/openapi.yaml",
    "build": "yarn clean && tsc -p tsconfig-build.json",
    "clean": "rm -rf ./dist ./coverage ./log ./build",
    "compile": "tsc",
    "compile:dev": "tsc -w",
    "coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.{js,ts}' 'tests/**/*.{js,ts}' --quiet",
    "lint:openapi": "openapi lint api/openapi.yaml",
    "full-lint": "tsc --noEmit && eslint 'src/**/*.{js,ts}' --quiet --fix && prettier --write 'src/**/*.{js,ts}'",
    "format": "prettier --write 'src/**/*.{js,ts}' 'tests/**/*.{js,ts}'",
    "test": "jest --runInBand --verbose false",
    "test:unit": "jest --clearCache && jest --runInBand --verbose false --testPathPattern=unit",
    "test:e2e": "jest --clearCache && jest --runInBand --verbose false --testPathPattern=e2e",
    "clearCache": "jest --clearCache"
  },
  "devDependencies": {
    "@ceramicnetwork/key-did-resolver": "^0.2.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@digitalbazaar/ed25519-verification-key-2018": "^1.1.0",
    "@redocly/openapi-cli": "^1.0.0-beta.21",
    "@transmute/did-key.js": "^0.2.1-unstable.28",
    "@tsconfig/node14": "^1.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/bs58": "^4.0.1",
    "@types/cors": "^2.8.7",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/ioredis": "^4.17.8",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@types/node-forge": "^0.9.5",
    "@types/supertest": "^2.0.9",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/yamljs": "^0.2.30",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "audit-ci": "^3.0.1",
    "bs58": "^4.0.1",
    "crypto-ld": "^4.0.3",
    "did-method-key": "^0.7.0",
    "dids": "^1.1.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "jest-junit": "^12.0.0",
    "key-did-provider-ed25519": "^1.0.0",
    "lint-staged": "^10.1.3",
    "node-mocks-http": "^1.8.1",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.4",
    "standard-version": "^9.0.0",
    "supertest": "^6.0.1",
    "ts-jest": "^26.1.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@cef-ebsi/app-jwt": "0.0.11",
    "@cef-ebsi/did-jwt": "^0.0.9",
    "@cef-ebsi/express-problem-details": "^0.0.2",
    "@cef-ebsi/problem-details-errors": "^0.0.3",
    "@validatedid/vid-did-resolver": "0.0.1",
    "axios": "^0.21.0",
    "base64url": "^3.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "did-resolver": "^2.1.2",
    "did-jwt": "^4.6.2",
    "dotenv": "^8.2.0",
    "eciesjs": "^0.3.5",
    "ethers": "^5.0.8",
    "express": "^4.17.1",
    "ioredis": "^4.19.2",
    "jose": "^2.0.3",
    "jsrsasign": "^10.1.4",
    "logform": "^2.2.0",
    "moment": "^2.25.3",
    "node-forge": "^0.10.0",
    "swagger-ui-express": "^4.1.4",
    "winston": "^3.2.1",
    "yamljs": "^0.3.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
