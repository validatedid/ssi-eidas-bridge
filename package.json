{
  "name": "ssi-eidas-bridge",
  "private": true,
  "version": "1.0.0",
  "description": "SSI eIDAS Bridge",
  "author": "",
  "license": "EUPL-1.2",
  "repository": {
    "type": "github",
    "url": "https://github.com/validatedid/ssi-eidas-bridge.git"
  },
  "scripts": {
    "audit": "audit-ci --moderate",
    "start": "node dist/start.js",
    "start:dev": "nodemon --watch src --exec 'ts-node' src/start.ts",
    "build": "yarn clean && tsc -p tsconfig-build.json",
    "clean": "rm -rf ./dist ./coverage ./log ./build",
    "compile": "tsc",
    "compile:dev": "tsc -w",
    "coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.{js,ts}' 'tests/**/*.{js,ts}' --quiet",
    "lint:openapi": "openapi lint api/openapi.yaml",
    "full-lint": "tsc --noEmit && eslint 'src/**/*.{js,ts}' --quiet --fix && prettier --write 'src/**/*.{js,ts}'",
    "format": "prettier --write 'src/**/*.{js,ts}' 'tests/**/*.{js,ts}'",
    "test:unit": "jest --clearCache && jest --runInBand --verbose false --testPathPattern=\"^.+\\.(spec|test)\\.ts$\"",
    "test:e2e": "jest --clearCache && jest --config ./tests/jest-e2e.json --runInBand --verbose false",
    "test": "jest --clearCache && jest --config ./jest-all.json --runInBand --verbose false",
    "clearCache": "jest --clearCache"
  },
  "devDependencies": {
    "@redocly/openapi-cli": "^1.0.0-beta.20",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.7",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@types/supertest": "^2.0.9",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/yamljs": "^0.2.30",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "audit-ci": "^3.0.1",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lint-staged": "^10.1.3",
    "node-mocks-http": "^1.8.1",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@cef-ebsi/app-jwt": "0.0.11",
    "@cef-ebsi/did-jwt": "^0.0.9",
    "@cef-ebsi/express-problem-details": "^0.0.2",
    "@cef-ebsi/problem-details-errors": "^0.0.3",
    "@validatedid/vid-did-resolver": "0.0.1",
    "axios": "^0.19.2",
    "base64url": "^3.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "did-jwt": "^4.6.2",
    "dotenv": "^8.2.0",
    "eciesjs": "^0.3.5",
    "ethers": "^5.0.8",
    "express": "^4.17.1",
    "jose": "^1.27.3",
    "moment": "^2.25.3",
    "swagger-ui-express": "^4.1.4",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.2",
    "yamljs": "^0.3.0"
  },
  "husky": {
    "hooks": {}
  }
}
