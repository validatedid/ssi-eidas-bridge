{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "rootDir": ".",
  "roots": ["<rootDir>/src/", "<rootDir>/tests/"],
  "testMatch": ["**/tests/**/*.+(spec|e2e-spec).+(ts|tsx|js)"],
  "transform": {
    "^.+\\.(ts|tsx)?$": "ts-jest"
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
  "coverageDirectory": "./coverage/",
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.d.ts",
    "!**/node_modules/**"
  ],
  "collectCoverage": true,
  "reporters": ["default", "jest-sonar"],
  "globals": {
    "ts-jest": {
      "diagnostics": true,
      "warnOnly": true,
      "ignoreCodes": [18002],
      "pretty": true
    }
  }
}
